<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.dora.ui.EventBusActivity">

    <data>
        <variable
            name="v"
            type="com.example.dora.ui.EventBusActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dview_title="@string/common_title"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/btn_send_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送消息"
            android:click="@{()->v.sendEvent()}"/>
    </LinearLayout>

</layout>