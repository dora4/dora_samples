<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.Web3PayActivity">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:dview_title="@string/common_title" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/dorafund_banner"/>

                    <TextView
                        android:id="@+id/tv_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        style="@style/ThemeTextNormal" />

                    <Button
                        android:id="@+id/btn_connect"
                        style="@style/ThemeButton.ObsidianBlack"
                        android:text="连接钱包" />

                    <Button
                        android:id="@+id/btn_disconnect"
                        style="@style/ThemeButton.ObsidianBlack"
                        android:text="断开钱包" />

                    <Button
                        android:id="@+id/btn_pay"
                        style="@style/ThemeButton.ObsidianBlack"
                        android:text="支付原生代币" />
                    <Button
                        android:id="@+id/btn_pay_usdt"
                        style="@style/ThemeButton.ObsidianBlack"
                        android:text="支付USDT" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_transaction_hash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ThemeTextNormal"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_query_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="查询上笔支付订单"
                    style="@style/ThemeTextNormal"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>