<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.OrmTransactionActivity">

    <data>

        <variable
            name="v"
            type="com.example.dcache.ui.OrmTransactionActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dview_title="@string/common_title"
            android:background="@color/colorPrimary"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/android_orm_course"/>
        <Button
            android:id="@+id/btn_orm_insert"
            style="@style/ThemeButton.LeafGreen"
            android:click="@{()->v.insertDataInTx()}"
            android:text="插入数据" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_orm_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ThemeTextNormal"/>
        </ScrollView>
    </LinearLayout>

</layout>