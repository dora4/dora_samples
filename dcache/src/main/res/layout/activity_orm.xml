<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="v"
            type="com.example.dcache.ui.OrmActivity" />
    </data>

    <LinearLayout
        android:id="@+id/rl_orm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:dview_title="@string/common_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_orm_insert"
                style="@style/ThemeButton"
                android:click="@{()->v.insertData()}"
                android:text="插入数据" />

            <Button
                android:id="@+id/btn_orm_delete_all"
                style="@style/ThemeButton"
                android:click="@{()->v.deleteAllData()}"
                android:text="清空数据" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_orm_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1A2025"
                android:textSize="15sp" />
        </ScrollView>
    </LinearLayout>
</layout>