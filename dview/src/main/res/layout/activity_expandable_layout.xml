<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.ExpandableLayoutActivity">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:dview_title="@string/common_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/by_disney_studio_presents" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <dora.widget.DoraExpandableLayout
                    android:id="@+id/expandable1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dview_el_titleText="点击展开更多信息" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <dora.widget.DoraExpandableLayout
                    android:id="@+id/expandable2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dview_el_titleText="另一项内容" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>