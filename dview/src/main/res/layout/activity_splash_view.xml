<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.SplashViewActivity">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            app:dview_title="@string/common_title" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <dora.widget.DoraSplashView
                android:id="@+id/splashView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dview_sv_images="@array/splash_images"
                app:dview_sv_switchInterval="2000"
                app:dview_sv_countdown="5000"
                app:dview_sv_skipTextSize="18sp"
                app:dview_sv_skipTextTemplate="跳过 %ds" />

        </FrameLayout>
    </LinearLayout>

</layout>