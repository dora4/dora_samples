<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.ProgressBarActivity">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:dview_title="@string/common_title" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/by_norman_bluhm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <dora.widget.DoraProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="30dp"
                android:visibility="invisible"
                app:dview_pb_progressWidth="1dp"
                app:dview_pb_progressColor="@color/light_gray"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_show_loading_view"
                    android:layout_width="wrap_content"
                    style="@style/ThemeButton.SkyBlue"
                    android:text="显示加载控件"/>
                <Button
                    android:id="@+id/btn_hide_loading_view"
                    android:layout_width="wrap_content"
                    style="@style/ThemeButton.SkyBlue"
                    android:text="隐藏加载控件"/>
                <Button
                    android:id="@+id/btn_show_loading_dialog"
                    android:layout_width="wrap_content"
                    style="@style/ThemeButton.SkyBlue"
                    android:text="显示加载对话框"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>