<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.IndicatorViewActivity">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:dview_title="@string/common_title" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <dora.widget.DoraIndicatorView
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                app:dview_iv_indicatorCount="8"
                app:dview_iv_indicatorWidth="12dp"
                app:dview_iv_indicatorHeight="12dp"
                app:dview_iv_indicatorSpacing="8dp"
                app:dview_iv_indicatorShape="circle"
                app:dview_iv_indicatorSelectedColor="@color/obsidian_black"
                app:dview_iv_indicatorUnselectedColor="@android:color/darker_gray"
                app:dview_iv_indicatorScaleFactor="1.5"
                app:dview_iv_indicatorAlphaFactor="0.5" />
        </LinearLayout>
    </LinearLayout>

</layout>