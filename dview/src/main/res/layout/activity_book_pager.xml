<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.BookPagerActivity">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:dview_title="@string/common_title" />
        <dora.widget.DoraBookPager
            android:id="@+id/bookPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dview_bp_pagerFrontColor="@color/light_gray"
            app:dview_bp_pagerBackColor="@color/white"/>
    </LinearLayout>

</layout>