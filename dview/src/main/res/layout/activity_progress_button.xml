<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.ProgressButtonActivity">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:dview_title="@string/common_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/by_patek_philippe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <dora.widget.ProgressButton
                android:id="@+id/progressButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="开始下载"
                android:textColor="@color/colorTextNormal"
                app:dview_pb_autoReset="true"
                app:dview_pb_backgroundColor="@color/white"
                app:dview_pb_borderColor="@android:color/holo_blue_dark"
                app:dview_pb_borderWidth="2dp"
                app:dview_pb_cornerRadius="25dp"
                app:dview_pb_finishedText="完成"
                app:dview_pb_hoverColor="@android:color/holo_blue_light"
                app:dview_pb_hoverTextColor="@android:color/white"
                app:dview_pb_pausedText="已暂停"
                app:dview_pb_showBorder="true" />
        </LinearLayout>
    </LinearLayout>
</layout>