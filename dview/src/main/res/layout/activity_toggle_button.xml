<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.ToggleButtonActivity">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dora.widget.DoraTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:dview_title="@string/common_title" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="谁说不能滑？"
                    style="@style/ThemeTextNormal"/>
                <dora.widget.DoraToggleButton
                    android:id="@+id/tb_1"
                    android:layout_width="41dp"
                    android:layout_height="26dp"
                    android:layout_margin="5dp"
                    app:dview_checked="true"
                    app:dview_uncheckColor="@color/light_gray"
                    app:dview_backgroundColor="@color/light_gray"
                    app:dview_checkedColor="@color/colorPrimary"
                    app:dview_borderWidth="2dp"
                    app:dview_showIndicator="false" />
                <dora.widget.DoraToggleButton
                    android:id="@+id/tb_2"
                    android:layout_width="41dp"
                    android:layout_height="26dp"
                    android:layout_margin="5dp"
                    app:dview_checked="false"
                    app:dview_uncheckColor="@color/light_gray"
                    app:dview_backgroundColor="@color/light_gray"
                    app:dview_checkedColor="@color/colorPrimary"
                    app:dview_borderWidth="2dp"
                    app:dview_showIndicator="false" />
                <dora.widget.DoraToggleButton
                    android:id="@+id/tb_3"
                    android:layout_width="41dp"
                    android:layout_height="26dp"
                    android:layout_margin="5dp"
                    app:dview_checked="true"
                    app:dview_uncheckColor="@color/light_gray"
                    app:dview_backgroundColor="@color/light_gray"
                    app:dview_checkedColor="@color/colorPrimary"
                    app:dview_borderWidth="2dp"
                    app:dview_showIndicator="true" />
                <dora.widget.DoraToggleButton
                    android:id="@+id/tb_4"
                    android:layout_width="41dp"
                    android:layout_height="26dp"
                    android:layout_margin="5dp"
                    app:dview_checked="true"
                    app:dview_uncheckColor="@color/light_gray"
                    app:dview_backgroundColor="@color/light_gray"
                    app:dview_checkedColor="@color/colorPrimary"
                    app:dview_borderWidth="3dp"
                    app:dview_showIndicator="false" />
                <dora.widget.DoraToggleButton
                    android:id="@+id/tb_5"
                    android:layout_width="41dp"
                    android:layout_height="26dp"
                    android:layout_margin="5dp"
                    app:dview_checked="true"
                    app:dview_uncheckColor="@color/light_gray"
                    app:dview_backgroundColor="@color/light_gray"
                    app:dview_checkedColor="@color/sky_blue"
                    app:dview_borderWidth="2dp"
                    app:dview_showIndicator="false" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</layout>